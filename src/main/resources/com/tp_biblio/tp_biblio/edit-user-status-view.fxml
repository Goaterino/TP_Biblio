<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.tp_biblio.tp_biblio.EditUserStatusController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
        <Label text="Name: "/>
        <Label fx:id="userNameLabel" />
        <Label text="Email: "/>
        <Label fx:id="userEmailLabel" />
        <Label text="Ongoing Borrows: "/>
        <Label fx:id="userOngoingBorrowsLabel" />
        <Label text="Current Baddie Status: "/>
        <Label fx:id="userBaddieStatusLabel"/>

        <ComboBox fx:id="statusComboBox">
        </ComboBox>

        <HBox alignment="CENTER" spacing="20" layoutY="250.0" prefWidth="360.0">
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction" />
            <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirmAction" />
        </HBox>
</VBox>