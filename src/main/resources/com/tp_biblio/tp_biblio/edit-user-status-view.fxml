<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tp_biblio.tp_biblio.EditUserStatusController">
    <children>
        <!-- Vertical box to align information and dropdown -->
        <VBox layoutX="20.0" layoutY="20.0" spacing="15">
            <!-- User information -->
            <Label fx:id="userNameLabel" text="Name: " />
            <Label fx:id="userEmailLabel" text="Email: " />
            <Label fx:id="userOngoingBorrowsLabel" text="Ongoing Borrows: " />
            <Label fx:id="userBaddieStatusLabel" text="Current Baddie Status: " />

            <!-- ComboBox for selecting new status -->
            <ComboBox fx:id="statusComboBox" prefWidth="360.0">
                <!-- Placeholder items (e.g., for different user statuses like "Normal", "Warning", "Baddie") -->
            </ComboBox>

            <!-- Buttons at the bottom -->
            <HBox alignment="CENTER" spacing="20" layoutY="250.0" prefWidth="360.0">
                <Button fx:id="cancelButton" text="Cancel" onAction="#onCancelButtonClick" />
                <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirmButtonClick" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
